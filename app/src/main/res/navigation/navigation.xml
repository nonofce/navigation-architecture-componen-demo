<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools" android:id="@+id/navigation_graph"
            app:startDestination="@id/firstFragment">

    <fragment android:id="@+id/firstFragment" android:name="com.nonofce.android.navigationcomponent.FirstFragment"
              android:label="fragment_first" tools:layout="@layout/fragment_first">
        <action android:id="@+id/first_to_second" app:destination="@+id/secondFragment"
                app:enterAnim="@anim/enter_slide_down" app:exitAnim="@anim/exit_slide_down"
                app:popEnterAnim="@anim/pop_enter_slide_up" app:popExitAnim="@anim/pop_exit_slide_up"/>

    </fragment>
    <fragment android:id="@+id/secondFragment" android:name="com.nonofce.android.navigationcomponent.SecondFragment"
              android:label="fragment_second" tools:layout="@layout/fragment_second">
        <action android:id="@+id/second_to_third" app:destination="@id/thirdFragment"
                app:enterAnim="@anim/enter_slide_down" app:exitAnim="@anim/exit_slide_down"
                app:popExitAnim="@anim/pop_exit_slide_up"
                app:popEnterAnim="@anim/pop_enter_slide_up"/>
        <argument android:name="your_name" app:argType="string" android:defaultValue="No name"/>

    </fragment>
    <fragment android:id="@+id/thirdFragment" android:name="com.nonofce.android.navigationcomponent.ThirdFragment"
              android:label="fragment_third" tools:layout="@layout/fragment_third">
        <action android:id="@+id/third_to_first" app:destination="@+id/firstFragment"
                app:enterAnim="@anim/enter_slide_down" app:exitAnim="@anim/exit_slide_down"
                app:popEnterAnim="@anim/pop_enter_slide_up" app:popExitAnim="@anim/pop_exit_slide_up"/>
        <argument android:name="your_full_name" app:argType="string" android:defaultValue="No value"/>
    </fragment>
</navigation>