<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                   tools:context=".SecondFragment" android:id="@+id/frameLayout2">
    <Button
            android:text="Go to third fragment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/second_button"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
    />
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/my_name" app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="194dp"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:id="@+id/last_name_edit"
            android:hint="Your last name please ..." android:layout_marginBottom="20dp"
            app:layout_constraintBottom_toTopOf="@+id/second_button"/>
</androidx.constraintlayout.widget.ConstraintLayout>